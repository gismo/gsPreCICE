{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "preCICE Participant Configuration",
    "description": "Schema for configuring a preCICE participant in G+Smo",
    "type": "object",
    "required": ["participant", "meshes"],
    "properties": {
      "participant": {
        "type": "object",
        "required": ["name", "preciceConfigFile"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the participant as defined in the preCICE configuration"
          },
          "preciceConfigFile": {
            "type": "string",
            "description": "Path to the preCICE XML configuration file"
          }
        }
      },
      "meshes": {
        "type": "array",
        "description": "Mesh definitions for the coupling",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["name", "type"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Mesh name as defined in preCICE configuration"
            },
            "type": {
              "type": "string",
              "enum": ["structured", "custom"],
              "description": "Type of mesh definition"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "structured" } }
              },
              "then": {
                "required": ["nx", "ny", "dim", "x-range", "y-range"],
                "properties": {
                  "nx": { "type": "integer", "minimum": 2 },
                  "ny": { "type": "integer", "minimum": 2 },
                  "dim": { "type": "integer", "minimum": 2, "maximum": 3 },
                  "x-range": { 
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": { "type": "number" }
                  },
                  "y-range": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": { "type": "number" }
                  }
                }
              }
            },
            {
              "if": {
                "properties": { "type": { "const": "custom" } }
              },
              "then": {
                "required": ["points"],
                "properties": {
                  "points": {
                    "type": "object",
                    "required": ["rows", "cols", "data"],
                    "properties": {
                      "rows": { "type": "integer", "minimum": 1 },
                      "cols": { "type": "integer", "minimum": 1 },
                      "data": { "type": "array", "items": { "type": "number" } }
                    }
                  }
                }
              }
            }
          ]
        }
      },
      "writeData": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["mesh", "name", "dataType", "coords"],
          "properties": {
            "mesh": { "type": "string" },
            "name": { "type": "string" },
            "dataType": { 
              "type": "string",
              "enum": ["constant", "timeDependent", "custom"]
            },
            "coords": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["mesh", "custom"] }
              }
            }
          }
        }
      },
      "readData": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["mesh", "name", "coords"],
          "properties": {
            "mesh": { "type": "string" },
            "name": { "type": "string" },
            "coords": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["mesh", "custom"] }
              }
            }
          }
        }
      }
    }
  }